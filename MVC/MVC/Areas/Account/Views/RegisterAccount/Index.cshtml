
@{
    ViewBag.Title = "Index";
}

<div class="container body-content">

    <div class="well">
        @Html.BeginForm(actionName: "", controllerName: "", method: FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" })
        {
        <div class="form-group">
            <label class="col-sm-2 control-label" for="category">類別</label>
            <div class="col-sm-10">
                <select class="form-control" id="category">
                    <option value="" selected="">請選擇</option>
                    <option>支出</option>
                    <option>收入</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="money">金額</label>
            <div class="col-sm-10">
                <input class="form-control" id="money" type="text" placeholder="金額">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="date">日期</label>
            <div class="col-sm-10">
                <input class="form-control" id="date" type="text" placeholder="日期">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="description">備註</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="description">                </textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-8 col-sm-4">
                <button class="btn btn-default" type="submit">送出</button>
            </div>
        </div>
        }
    </div>

    <hr>

</div>
