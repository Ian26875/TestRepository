<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ian Run部落格</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Blog.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row content">
            <div class="col-sm-1">
                <hr />
            </div>

            <div class="col-sm-9 ">

                @RenderBody()
                <hr />

                <footer>
                    <p>&copy; @DateTime.Now.Year - 我的 Run部落格</p>
                </footer>

            </div>
            <div class="col-sm-2 sidenav">
                <h2> Ian 部落格</h2>
                <ul class="nav nav-pills nav-stacked">
                    <li>@Html.ActionLink("首頁", "Index", "Home", htmlAttributes: new { @class = "active" })</li>
                    <li>@Html.ActionLink("關於", "About", "Home")</li>
                    <li>@Html.ActionLink("連絡方式", "Contact", "Home")</li>

                </ul>
                <br>
                <div class="input-group">
                    <input class="form-control" placeholder="Search Blog.." type="text">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </div>
            </div>

            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
        </div>
    </div>
</body>
</html>